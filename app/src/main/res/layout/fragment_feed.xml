<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Sticky Header -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_dark"
        android:fitsSystemWindows="false"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:liftOnScroll="false"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Top Row: Location, Search, and Filter Buttons -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="16dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <!-- Title Section -->
                <TextView
                    android:id="@+id/tv_header_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Discover"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <!-- Search and Filter Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_filter"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:padding="0dp"
                        app:icon="@drawable/ic_filter"
                        app:iconTint="#FFFFFF"
                        app:iconSize="20dp"
                        app:iconPadding="0dp"
                        app:iconGravity="textStart"
                        app:backgroundTint="@color/surface_dark"
                        app:cornerRadius="20dp"
                        app:strokeColor="@color/slate_700"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_search"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:padding="0dp"
                        app:icon="@drawable/ic_explore"
                        app:iconTint="#FFFFFF"
                        app:iconSize="20dp"
                        app:iconPadding="0dp"
                        app:iconGravity="textStart"
                        app:backgroundTint="@color/surface_dark"
                        app:cornerRadius="20dp"
                        app:strokeColor="@color/slate_700"
                        app:strokeWidth="1dp" />

                </LinearLayout>

            </RelativeLayout>

            <!-- Search Card (Initially Hidden) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/search_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/surface_dark"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/slate_800"
                app:strokeWidth="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Search Icon -->
                    <ImageView
                        android:id="@+id/icon_search_left"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_explore"
                        app:tint="@color/slate_500" />

                    <!-- Search Input -->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/icon_search_left"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="16dp"
                        android:background="@android:color/transparent"
                        android:hint="Find events, hobbies..."
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="@color/slate_500"
                        android:textSize="14sp" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Category Filter Chips -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:clipToPadding="false">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_filters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleLine="true"
                    app:chipSpacing="10dp"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_all"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:textColor="@color/chip_text_color_selector"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:checked="true"
                        app:chipBackgroundColor="@color/chip_background_color"
                        app:checkedIconVisible="false"
                        app:chipStrokeWidth="0dp"

                    />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_sports"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sports"
                        android:textColor="@color/chip_text_color_selector"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:chipBackgroundColor="@color/chip_background_color"
                        app:checkedIconVisible="false"
                        app:chipStrokeWidth="0dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_music"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Music"
                        android:textColor="@color/chip_text_color_selector"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:chipBackgroundColor="@color/chip_background_color"
                        app:checkedIconVisible="false"
                        app:chipStrokeWidth="0dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_art"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Art"
                        android:textColor="@color/chip_text_color_selector"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:chipBackgroundColor="@color/chip_background_color"
                        app:checkedIconVisible="false"
                        app:chipStrokeWidth="0dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_social"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Social"
                        android:textColor="@color/chip_text_color_selector"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:chipBackgroundColor="@color/chip_background_color"
                        app:checkedIconVisible="false"
                        app:chipStrokeWidth="0dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_outdoor"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Outdoor"
                        android:textColor="@color/chip_text_color_selector"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:chipBackgroundColor="@color/chip_background_color"
                        app:checkedIconVisible="false"
                        app:chipStrokeWidth="0dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_food"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food &amp; Drink"
                        android:textColor="@color/chip_text_color_selector"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:chipBackgroundColor="@color/chip_background_color"
                        app:checkedIconVisible="false"
                        app:chipStrokeWidth="0dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_trending"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥ Trending"
                        android:textColor="@color/chip_text_color_selector"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:chipBackgroundColor="@color/chip_background_color"
                        app:checkedIconVisible="false"
                        app:chipStrokeWidth="0dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_upcoming"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upcoming"
                        android:textColor="@color/chip_text_color_selector"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:chipBackgroundColor="@color/chip_background_color"
                        app:checkedIconVisible="false"
                        android:checked="true"
                        app:chipStrokeWidth="0dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_nearby"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nearby"
                        android:textColor="@color/chip_text_color_selector"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:chipBackgroundColor="@color/chip_background_color"
                        app:checkedIconVisible="false"
                        app:chipStrokeWidth="0dp" />

                </com.google.android.material.chip.ChipGroup>

            </HorizontalScrollView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#161F29"
      />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Divider -->

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Section Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upcoming Nearby"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEE ALL"
                android:textColor="@color/primary_blue"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Activities List (SwipeRefreshLayout + RecyclerView) -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_activities"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="100dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/layout_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="32dp">

            <TextView
                android:id="@+id/tv_empty_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”"
                android:textSize="64sp" />

            <TextView
                android:id="@+id/tv_empty_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/no_activities"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tv_empty_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/slate_500"
                android:textAlignment="center"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_open_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/open_settings"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                app:icon="@drawable/ic_settings"
                app:iconTint="#FFFFFF"
                app:backgroundTint="@color/primary_blue" />

        </LinearLayout>

    </LinearLayout>

    <!-- Loading Progress -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/primary_blue" />

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add"
        app:tint="@color/white"
        app:backgroundTint="@color/primary_blue"
        app:elevation="8dp"
        app:fabSize="normal" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
