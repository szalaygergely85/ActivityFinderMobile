<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="4dp">

    <!-- Photo Image -->
    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name" />

    <!-- Profile Badge -->
    <TextView
        android:id="@+id/tv_profile_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="8dp"
        android:background="@drawable/bg_badge"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="⭐ Profile"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone" />

    <!-- Button Container (Overlay) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_overlay_dark"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Set as Profile Button -->
        <ImageButton
            android:id="@+id/btn_set_as_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_button_circular"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/ic_star"
            android:visibility="gone" />

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/btn_delete_photo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_button_circular_danger"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_delete"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>
