<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_dark"
        app:elevation="0dp"
        app:liftOnScroll="false">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/create_activity"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@color/primary_blue"
            app:titleTextColor="@color/white"
            app:titleCentered="true" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="96dp">

            <!-- Info Card with Image -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/primary_blue"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header Image -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:minHeight="160dp"
                        android:scaleType="centerCrop"
                       />

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="@color/primary_blue">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Let's get people together!"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:letterSpacing="-0.01" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Fill in the details below to host your event and build community."
                            android:textSize="14sp"
                            android:textColor="#CCffffff"
                            android:alpha="0.8" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Form Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

            <!-- Basic Info Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Information"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:letterSpacing="-0.01"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Title Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Title"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Title Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_title"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name your activity"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_edit"
                app:endIconTint="@color/primary_blue"
                app:boxStrokeColor="@color/primary_blue"
                app:hintTextColor="@color/slate_500">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:minHeight="56dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Category Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Category Dropdown -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_category"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select a category"
                app:boxStrokeColor="@color/primary_blue"
                app:hintTextColor="@color/slate_500"
                app:endIconTint="@color/primary_blue">

                <AutoCompleteTextView
                    android:id="@+id/et_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:minHeight="56dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Description Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Description Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_description"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What will we do? Describe the vibe and any requirements."
                app:boxStrokeColor="@color/primary_blue"
                app:hintTextColor="@color/slate_500"
                app:counterEnabled="true"
                app:counterMaxLength="500"
                app:counterTextColor="@color/slate_500">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="4"
                    android:maxLines="8"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- When & Where Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="When &amp; Where"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:letterSpacing="-0.01"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp" />

            <!-- Date & Time Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- Date Input -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:textStyle="normal"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_date"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Oct 24, 2023"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_calendar"
                        app:endIconTint="@color/primary_blue"
                        app:boxStrokeColor="@color/primary_blue"
                        app:hintTextColor="@color/slate_500">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:inputType="none"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:minHeight="56dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Time Input -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:textStyle="normal"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_time"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="7:00 PM"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_time"
                        app:endIconTint="@color/primary_blue"
                        app:boxStrokeColor="@color/primary_blue"
                        app:hintTextColor="@color/slate_500">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:inputType="none"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:minHeight="56dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Location Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Location Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_location"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search address or venue"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_location"
                app:endIconTint="@color/primary_blue"
                app:boxStrokeColor="@color/primary_blue"
                app:hintTextColor="@color/slate_500">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/actv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textCapWords"
                    android:completionThreshold="1"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:minHeight="56dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Map Preview -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/map_preview_container"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/surface_border">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/map_view_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Capacity Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:letterSpacing="-0.01"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp" />

            <!-- Total Spots Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Spots Available"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Total Spots Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_total_spots"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Unlimited"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_people"
                app:endIconTint="@color/primary_blue"
                app:boxStrokeColor="@color/primary_blue"
                app:hintTextColor="@color/slate_500"
                app:helperText="Leave empty for unlimited spots."
                app:helperTextTextColor="@color/slate_500">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_total_spots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:minHeight="56dp" />

            </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Fixed Bottom Save Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="#CC101922"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        android:elevation="8dp">

        <!-- Progress Indicator -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:indeterminate="true"
            android:visibility="gone"
            app:indicatorColor="@color/primary_blue" />

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Save Activity"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:backgroundTint="@color/primary_blue"
            app:icon="@drawable/ic_check_circle"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:elevation="8dp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
