<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="320dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="32dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/surface_dark"
    app:strokeWidth="1dp"
    app:strokeColor="@color/surface_border">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Photo Image -->
        <ImageView
            android:id="@+id/iv_preview_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/activity_default"
            tools:ignore="ContentDescription" />

        <!-- Gradient Overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_bottom_dark" />

        <!-- "See All" Overlay (only shown on last item) -->
        <FrameLayout
            android:id="@+id/overlay_see_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="@color/primary_blue" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="-48dp"
                    android:src="@drawable/ic_add"
                    android:padding="12dp"
                    app:tint="@color/white"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_see_all_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="See All 12"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="See All 12" />

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>
