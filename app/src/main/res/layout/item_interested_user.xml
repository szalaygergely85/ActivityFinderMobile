<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_dark">

    <!-- User Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:minHeight="72dp">

        <!-- Profile Image with Border -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_person"
            app:civ_border_width="2dp"
            app:civ_border_color="#330d7ff2" />

        <!-- User Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Name -->
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Rating and Joined Time Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <!-- Rating with Star -->
                <TextView
                    android:id="@+id/tv_user_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4dp"
                    android:textSize="12sp"
                    android:textColor="@color/slate_400"
                    android:drawableStart="@drawable/ic_star"
                    android:drawableTint="@color/warning"
                    android:gravity="center_vertical" />

                <!-- Separator -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€¢ "
                    android:textSize="12sp"
                    android:textColor="@color/slate_400"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp" />

                <!-- Joined At -->
                <TextView
                    android:id="@+id/tv_joined_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/slate_400" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons Section -->
    <LinearLayout
        android:id="@+id/layout_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:gravity="center">

        <!-- Approve Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_accept"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:text="Approve"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:backgroundTint="#0d7ff2"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_check_circle"
            app:iconSize="18dp"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            android:elevation="0dp" />

        <!-- Decline Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_decline"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Decline"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:backgroundTint="@color/surface_dark"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_close"
            app:iconSize="18dp"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            android:elevation="0dp" />

    </LinearLayout>

    <!-- Border Bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1AFFFFFF" />

    <!-- Status chip (shown after action) -->
    <com.google.android.material.chip.Chip
        android:id="@+id/chip_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="end"
        android:visibility="gone"
        app:chipStrokeWidth="0dp"
        app:chipMinHeight="28dp" />

</LinearLayout>
