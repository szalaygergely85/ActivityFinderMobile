<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_dark">

    <!-- Header with Close Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/surface_dark">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Report Issue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:fontFamily="sans-serif-medium" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="invisible" />

    </LinearLayout>

    <!-- Content Body -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Headline Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What seems to be the problem?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please select or describe the issue you're reporting"
            android:textSize="14sp"
            android:textColor="@color/slate_400"
            android:layout_marginBottom="24dp" />

        <!-- Reason Chips -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/reasonChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleLine="false"
            app:chipSpacing="12dp"
            app:singleSelection="true"
            android:layout_marginBottom="24dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSpam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spam"
                android:textColor="@color/white"
                style="@style/CustomInterestChip"
                />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipInappropriate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inappropriate"
                style="@style/CustomInterestChip" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHarassment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harassment"
                style="@style/CustomInterestChip" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFalseInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="False Info"
                style="@style/CustomInterestChip"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipScam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scam"
                style="@style/CustomInterestChip"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipOffensive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offensive"
                style="@style/CustomInterestChip" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Reason Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:counterEnabled="true"
            app:counterMaxLength="500"
            android:hint="Additional Details"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/surface_dark"
            app:boxStrokeColor="@color/slate_500"
            app:boxStrokeWidth="1dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:hintTextColor="@color/slate_400"
            app:helperText="Optional">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reasonInput"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:maxLength="500"
                android:hint="Provide any additional context that would be helpful"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textColorHint="@color/slate_500" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Submit Report"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/primary_blue"
                android:elevation="8dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelButton"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Cancel"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/slate_400" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
