<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_large">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report Issue"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/margin_medium" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please select or describe the issue you're reporting"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="@dimen/margin_medium" />

    <!-- Reason Chips -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/reasonChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleLine="false"
        android:layout_marginBottom="@dimen/margin_large">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSpam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spam"
            style="@style/Widget.Material3.Chip.Filter"
            app:chipBackgroundColor="@color/chip_unselected"
            app:chipStrokeWidth="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipInappropriate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inappropriate"
            style="@style/Widget.Material3.Chip.Filter"
            app:chipBackgroundColor="@color/chip_unselected"
            app:chipStrokeWidth="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipHarassment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harassment"
            style="@style/Widget.Material3.Chip.Filter"
            app:chipBackgroundColor="@color/chip_unselected"
            app:chipStrokeWidth="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFalseInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="False Info"
            style="@style/Widget.Material3.Chip.Filter"
            app:chipBackgroundColor="@color/chip_unselected"
            app:chipStrokeWidth="0dp" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Reason Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large"
        app:counterEnabled="true"
        app:counterMaxLength="500"
        android:hint="Additional details (optional)">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reasonInput"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:maxLength="500" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:spacing="@dimen/margin_medium">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_medium"
            android:text="Cancel" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report"
            app:backgroundTint="@color/error" />

    </LinearLayout>

</LinearLayout>
