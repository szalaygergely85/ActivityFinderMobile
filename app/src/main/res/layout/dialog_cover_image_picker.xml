<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/surface_dark"
    android:padding="16dp">

    <!-- Handle bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_handle" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Cover Image"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp" />

    <!-- Use Default Option -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_use_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use Category Default"
        android:textColor="@color/white"
        app:backgroundTint="@color/slate_700"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_refresh"
        app:iconGravity="textStart"
        app:iconTint="@color/slate_400"
        android:layout_marginBottom="16dp" />

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/progress_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Empty state -->
    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No cover images available"
        android:textColor="@color/slate_400"
        android:textAlignment="center"
        android:padding="32dp"
        android:visibility="gone" />

    <!-- Cover Images Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cover_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        android:clipToPadding="false" />

</LinearLayout>
